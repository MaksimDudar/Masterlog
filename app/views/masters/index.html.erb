  </head>
    <body class="page-id-8">
    <div class="container">
  <div class="row">
    <div class="col-xs-12">
      <p style="color: green"><%= notice %></p>
      <font size="6.5" color="black" face="Tahoma">МастерЛогистик (<%= send(:range) %>)</font>
      <a href="/grade"><img src="/60.png" alt="company" width="100" height="50" style='position:absolute;right:150px;top:150px;'></a>

      <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: <%= send(:proc) %>%;" aria-valuenow="<%= send(:proc) %>" aria-valuemin="0" aria-valuemax="10"><%= send(:proc) %>%</div>
      </div>
      <br><p> <%= link_to "Новый отзыв", new_master_path %> </p><hr>

<% @masters.each do |master| %>
<div class="dropdown d-grid gap-2">
  <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false"><%= "Отзыв № #{master.id}"%></button><hr>
  <ul class="dropdown-menu">
    <li><a><%= render master %></a></li>
    </ul>
  <% end %>
    </div>
  </div>
</div>
</body>
</html>
